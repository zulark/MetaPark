@using WebApplication1
@using WebApplication1.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Veiculo>

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Selecionar Veículo</title>
    <meta charset="UTF-8">
</head>

<body>
    <div id="container">
        <p>Ola @ViewBag.Name</p>
        <p>Saldo na carteira</p>
        <p>@ViewBag.Saldo</p>
        <a asp-action="HomeCarteira">Recarregar créditos</a>
        <h1>Selecione um veículo</h1>
        <p>@ViewBag.Ip</p>
        <table>
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
            </tr>
                    
            <form method="post">
                
                @for (int i = 0; i < Model.Count; i++)
                {
                        if (Model.Count == 0)
                    {
                        <label>Nenhum veículo cadastrado</label>
                    }
                    else
                    {
                    <tr>
                        <td>@Model[i].Marca</td>
                        <td>@Model[i].Modelo</td>
                        <td>@Model[i].Placa</td>
                        <td>
                            <a asp-action="Selecionar" asp-route-idVeiculo="@Model[i].idVeiculo">Selecionar</a>
                        </td>
                    </tr>
                    }
                }
                
            <button type="submit" class="botao botao-block" id="cadastrar" asp-action="CadastrarVeiculo">Cadastrar Veículo</button>
            </form>
                    

        </table><br>

        <p>@Model[0].idUsuario</p>

        <a asp-action="Sair">Sair</a>

    </div>
</body>

</html>