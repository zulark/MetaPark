@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication1
@using WebApplication1.Models
@model WebApplication1.Models.Usuario


<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
</head>

<body>
    <div id="container">
        <h1>Entrar</h1>
        <fieldset>
            <form method="post">
                <div class="conteudo">

                    <div class="entrar">

                        <Label asp-for="Login">login: </Label><br>
                        <input asp-for="Login"  type="text" name="login" placeholder="Digite seu login"><br>

                        <label asp-for="Password">senha: </label><br>
                        <input asp-for="Password" type="password" name="senha" placeholder="Digite a senha">

                    </div>

                    <div class="botoes">
                        <button asp-action="Entrar">Entrar</button>
                        <button asp-action="CadastrarUsuario">Cadastrar-se</button>
                        <button asp-action="Listar">Listar Usuarios</button>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</body>

</html>