@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication1
@using WebApplication1.Models
@model WebApplication1.Models.Usuario


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>

    <div class="container">
        <form method="post">
            <h1 id="title"><span>M</span>eta<span>P</span>ark</h1>
            <label asp-for="Login">Email</label>
            <input asp-for="Login" id="email">
            <label asp-for="Password">Senha</label>
            <input asp-for="Password" type="password" id="password">
            <div class="remember-me">
                <input type="checkbox" value="lsRememberMe" id="rememberMe"> <label for="rememberMe">Lembrar senha</label>
            </div>
            <input asp-action="Entrar" type="submit" value="Entrar" onclick="lsRememberMe()">

            <div class="other-options">
                <a href="../registerForm/register.html" class="other-options">
                    Cadastre-se
                </a>
                <a href="../recoverPassword/recover.html" class="other-options">
                    Recuperar senha
                </a>
            </div>

        </form>
    </div>

</body>
</html>